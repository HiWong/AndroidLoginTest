<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/f_test_message_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/f_test_message_hint" />

    <TextView
        android:id="@+id/f_test_message_output"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/f_test_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone" />

    <Button
        android:id="@+id/f_test_goButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/f_test_goButton_text" />

</LinearLayout>