<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mintben.logintest.LoginActivity">

    <TextView
        android:id="@+id/a_login_welcome_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/a_login_prompt"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/a_login_userName_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/a_login_welcome_prompt"
        android:hint="@string/a_login_userName_hint" />

    <EditText
        android:id="@+id/a_login_password_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/a_login_userName_text"
        android:hint="@string/a_login_password_hint"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/a_login_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/a_login_password_text"
        android:text="@string/a_login_loginButton_text" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:indeterminate="true"
        android:visibility="gone" />
</RelativeLayout>
